set nocompatible

" tabs
set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab

" indentation
set smartindent
set autoindent
filetype plugin indent on

" syntax
syntax on

" line numbers
set number

" theme
colorscheme twilight



" clojure
let g:clj_highlight_builtins=1
let g:clj_paren_rainbow=1
